{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}


	<div class="container">
		<div class="p-5 mb-4 bg-light rounded-3">
			<div class="container-fluid py-5">
				<h1 class="display-5 fw-bold">Les utilisateurs
				</h1>
				<p class="col-md-8 fs-4">Pour voir toutes les utilisateurss, les modifier et ou en créer de nouveaux.</p>

			</div>
		</div>


		<div class="mb-4">
			<button type="button" class="btn btn-outline-dark">
				<a href="{{ path('app_admin_user_new') }}">Creer un nouvel utilisateur</a>
			</button>
		</div>

		<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th>Email</th>
					<th>Pseudo</th>
					<th>verifications</th>
					<th>possibilitées</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.email }}</td>
						<td>{{ user.pseudo }}</td>
						<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
						<td>
							<button type="button" class="btn btn-outline-dark">
								<a href="{{ path('app_admin_user_show', {'id': user.id}) }}">voir</a>
							</button>

							<button type="button" class="btn btn-outline-dark">
								<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">modifier</a>
							</button>


						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
