{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>l'utilisateur</h1>

    <table class="table">
        <tbody>
          
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
    
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">retour a la liste d'utilisateur</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
