{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}


<div class="container">
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">Les utilisateurs </h1>
            <p class="col-md-8 fs-4">Detail de {{ user.pseudo }}</p>
        
        </div>
    </div>
	<div class="card" style="width: 18rem;">
		<div class="card-body">
		
			<h6 class="card-subtitle mb-2 text-muted">Pseudo :
				{{ user.pseudo }}</h6>
			<p class="card-text">Email :
				{{ user.email }}</p>
			<button type="button" class="btn btn-outline-dark mt-2">
				<a href="{{ path('app_admin_user_index') }}">retour a la liste d'utilisateur</a>
			</button>
			<button type="button" class="btn btn-outline-dark mt-3 mb-2">
				<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">modifier</a>
			</button>
            	{{ include('admin_user/_delete_form.html.twig') }}
		</div>
	</div>
</div>    
{% endblock %}
