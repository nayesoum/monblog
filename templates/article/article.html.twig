{% extends 'base.html.twig' %}

{% block title %}Tous les articles
{% endblock %}

{% block body %}

<div class="container">
	<div class="p-5 mb-4 bg-light rounded-3">
		<div class="container-fluid ">
			<h1 class="text-center mt-5 mb-5">Tous les articles</h1>
		</div>
	</div>

	<div class="row row-cols-1 row-cols-md-2 g-4 ">
		{% for article in articles %}
			<div class="card">
				<img src="{{ article.image }}" class="card-img-top img-fluid" style="width: 15rem;" alt="image de la categorie">
				<div class="card-body">
					<h5 class="card-title">{{ article.title }}</h5>
					<p class="card-text">{{ article.category }}</p>
					<p class="card-text">{{ article.Content }}</p>
						<button type="button" class="btn btn-outline-dark">
						 	<a href="{{ path('app_article_show', {'id': article.id}) }}">Voir</a>
						</button>
					
				</div>
			</div>
		{% endfor %}

	</div>

