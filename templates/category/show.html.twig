{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}

	<div class="container ">

		<div class="p-5 mb-4 bg-light rounded-3">
			<div class="container-fluid py-5">
				<h1 class="display-5 fw-bold">Les catégorie
				</h1>
				<p class="col-md-8 fs-4">Pour voir toutes la catégorie
					{{ category.name }}</p>

			</div>
		</div>

		<div class="mb-4">
			<button type="button" class="btn btn-outline-dark">
				<a href="{{ path('app_category_index') }}">retour à la liste des catégories</a>
		    </button>
		</div>
		<div class="row row-cols-1 row-cols-md-2 g-4 ">
			{% if articles|length  > 0 %}
				{% for article in articles %}
					<div class="card">
						<img src="{{ article.image }}" class="card-img-top img-fluid" style="width: 15rem;" alt="image de la categorie">
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<p class="card-text">{{ article.category }}</p>
							<p class="card-text">{{ article.Content }}</p>
							<button type="button" class="btn btn-outline-dark">
								<a href="{{ path('app_article_show', {'id': article.id}) }}">Voir</a>
							</button>

						</div>
					</div>
				{% endfor %}
			{% else %}
				<p>
					desolé aucun article
				</p>

			{% endif %}
		</div>
	</div>

{% endblock %}
