{% extends 'base.html.twig' %}

{% block title %}Partie admin article
{% endblock %}

{% block body %}

<div class="container ">
	<div class="p-5 mb-4 bg-light rounded-3">
		<div class="container-fluid ">
			<h1 class="text-center mt-5 mb-5">Ma partie admin voir et modifier mes articles</h1>
		</div>
	</div>
	<button type="button" class="btn btn-outline-dark mt-3 mb-5">
			<a href="{{ path('app_admin_article_new') }}">Créer un nouvel article</a>
		</button>

	<section class="bg-light rounded-3">

	
		<div class="row row-cols-1 row-cols-md-3 g-4 ">
			{% for article in articles %}
			{# j'ai ajouter le display flex sur les colonne pour que les cards soit centré #}
				<div class="col d-flex justify-content-center">
					<div class="card mb-3 Regular shadow" style="width: 18rem;">
						{#  si je veux l'upload <img src="{{asset('images-articles')}}/{{ article.image }}" class="img-fluid rounded-start" alt="..."> #}
						<img src="{{ article.image }}" class="img-fluid rounded-start" alt="...">
						<div class="card-body">
						{# ici j'ai mis un paddingy de haut en bas pour avoir de l'espace #}
							<h5 class="card-title py-2">{{ article.title }}</h5>
							<h6 class="card-title py-2">Catégorie :{{ article.category }}</h6>
						</div>
						
						<div class="card-body">
						{# j'ai ajouter les btn pour que lien lien soit sous forme de boutton #}
							<a class="card-link btn btn-primary" href="{{ path('app_admin_article_show', {'id': article.id}) }}">voir</a>
							<a class="card-link btn btn-primary" href="{{ path('app_admin_article_edit', {'id': article.id}) }}">Modifier
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewbox="0 0 16 16">
									<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>	
	</section>
</div> 
{% endblock %}
